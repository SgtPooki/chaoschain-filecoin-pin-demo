# ChaosChain Configuration
CHAOS_NETWORK=base-sepolia
CHAOS_AGENT_NAME=FilecoinPinDemoAgent
CHAOS_AGENT_DOMAIN=demo.chaoscha.in
CHAOS_AGENT_ROLE=server

# Filecoin Pin CLI Configuration
# Path to filecoin-pin CLI (default: "filecoin-pin" if in PATH)
FILECOIN_PIN_PATH=filecoin-pin

# Filecoin Pin CLI options
FILECOIN_PIN_AUTO_FUND=true
FILECOIN_PIN_BARE=false
FILECOIN_PIN_VERBOSE=false

# Wallet Configuration
# Base-Sepolia private key for ChaosChain
BASE_SEPOLIA_PRIVATE_KEY=your-base-sepolia-private-key
# Base-Sepolia address (optional - will be derived from private key if not set)
BASE_SEPOLIA_ADDRESS=your-base-sepolia-address
BASE_SEPOLIA_RPC_URL=https://base-sepolia.g.alchemy.com/v2/your-alchemy-key

# Filecoin Calibration private key for Filecoin Pin (used by filecoin-pin CLI)
FILECOIN_CALIBRATION_PRIVATE_KEY=your-filecoin-calibration-private-key
FILECOIN_CALIBRATION_RPC_URL=https://api.calibration.node.glif.io/rpc/v1
